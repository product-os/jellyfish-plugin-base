{
  "name": "@balena/jellyfish-plugin-base",
  "version": "2.1.291",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-plugin-base.git"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "description": "Base for all Jellyfish plugins",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib test && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest,typedoc",
    "lint:fix": "balena-lint --fix lib test",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "Apache-2.0",
  "dependencies": {
    "@balena/jellyfish-logger": "^3.0.134",
    "json-schema": "^0.4.0",
    "lodash": "^4.17.21",
    "semver": "^7.3.5",
    "skhema": "^5.3.4"
  },
  "devDependencies": {
    "@balena/jellycheck": "^1.0.0",
    "@balena/jellyfish-config": "^1.5.13",
    "@balena/jellyfish-types": "^1.2.26",
    "@balena/lint": "^6.1.1",
    "@types/jest": "^27.0.3",
    "@types/json-schema": "~6.0.1",
    "@types/semver": "^7.3.9",
    "@types/sinon": "^10.0.6",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "simple-git-hooks": "^2.7.0",
    "sinon": "^12.0.1",
    "ts-jest": "^27.0.7",
    "typedoc": "^0.22.9",
    "typescript": "^4.4.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "versionist": {
    "publishedAt": "2021-11-22T13:54:47.914Z"
  }
}
