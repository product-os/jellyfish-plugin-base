{
  "name": "@balena/jellyfish-plugin-base",
  "version": "2.1.144",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-plugin-base.git"
  },
  "engines": {
    "node": ">=12.15.0"
  },
  "description": "Base for all Jellyfish plugins",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib test && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest",
    "lint-fix": "balena-lint --fix lib test",
    "unit": "jest",
    "test": "npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-logger": "^3.0.8",
    "@balena/jellyfish-types": "^0.6.5",
    "json-schema": "^0.3.0",
    "lodash": "^4.17.21",
    "semver": "^7.3.5",
    "skhema": "^5.3.4"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/jellyfish-config": "^1.2.8",
    "@balena/lint": "^6.1.1",
    "@types/jest": "^26.0.23",
    "@types/semver": "^7.3.6",
    "@types/sinon": "^10.0.2",
    "depcheck": "^1.4.1",
    "deplint": "^1.1.3",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "simple-git-hooks": "^2.4.1",
    "sinon": "^11.1.1",
    "ts-jest": "^27.0.3",
    "typedoc": "^0.20.36",
    "typescript": "^4.3.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
